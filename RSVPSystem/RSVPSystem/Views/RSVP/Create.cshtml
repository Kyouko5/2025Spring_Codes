@{
    ViewData["Title"] = "添加RSVP";
}

<h1>添加RSVP</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label class="control-label">参与者</label>
                <select name="attendeeId" class="form-control" asp-items="ViewBag.AttendeeId"></select>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">派对</label>
                <select name="partyId" class="form-control" asp-items="ViewBag.PartyId"></select>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="添加" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 