@model RSVPSystem.Models.AttendeeParty

@{
    ViewData["Title"] = "Delete RSVP";
}

<h1>Delete RSVP</h1>

<h3>Are you sure you want to delete this RSVP?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Attendee
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attendee.Name)
        </dd>
        <dt class="col-sm-2">
            Party
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Party.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-attendeeId="@Model.AttendeeId" asp-route-partyId="@Model.PartyId" method="post">
        <input type="hidden" name="attendeeId" value="@Model.AttendeeId" />
        <input type="hidden" name="partyId" value="@Model.PartyId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div> 