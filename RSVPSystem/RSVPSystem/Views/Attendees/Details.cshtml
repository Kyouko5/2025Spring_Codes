@model RSVPSystem.Models.Attendee

@{
    ViewData["Title"] = "Attendee Details";
}

<h1>Attendee Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>

    <h4>Registered Parties</h4>
    @if (Model.AttendeeParties != null && Model.AttendeeParties.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Party Name</th>
                    <th>Location</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AttendeeParties)
                {
                    <tr>
                        <td>@item.Party.Name</td>
                        <td>@item.Party.Location</td>
                        <td>@item.Party.Date.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Not registered for any parties.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div> 