@model List<RSVPSystem.Models.Party>

<h1>RSVP Now</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.Name</td>
                <td>@party.Location</td>
                <td>@party.Date.ToString("yyyy/MM/dd")</td>
                <td>
                    <a asp-action="Register" asp-route-partyName="@party.Name" class="btn btn-primary">Register</a>
                    <a asp-action="ShowAttendees" asp-route-partyName="@party.Name" class="btn btn-info">Show Attendees</a>
                </td>
            </tr>
        }
    </tbody>
</table>